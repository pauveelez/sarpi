
[class*="fontawesome-"]:before
  font-family 'FontAwesome', sans-serif

body
  background-image url('../img/patron.png')

input
  border none
  line-height 1.5em
  padding 0
  -webkit-appearance none

#login
  background-color #CEE7F3
  border-radius 30px
  box-shadow 0px 0px 500px 200px #fff
  height 40%
  margin auto
  max-width 300px
  min-width 200px
  padding 40px
  position absolute
  text-align center
  top 0; left: 0; bottom: 0; right: 0
  width 60%
  -webkit-box-shadow 0px 0px 500px 200px #fff
  form
    span
      background-color #fff
      border-radius 3px 0px 0px 3px
      color #606468
      display block
      float left
      height 50px
      line-height 50px
      text-align center
      width 45px
      width 40px
      width 42px
    input
      height 50px
    input[type="submit"]
      background-color #3fa9f5
      border-radius 3px
      border 1px solid #bcdbeb
      color #fff
      font-weight bold
      margin-bottom 2em
      padding 0px 22px
      text-decoration none
      text-transform uppercase
      width 100%
      -moz-border-radius 3px
      -webkit-border-radius 3px
  & > p
    text-align center
    span
      padding-left 5px

#login form input[type="text"], input[type="password"]
  background-color #fff
  border-radius 0px 3px 3px 0px
  color #606468
  margin-bottom 1em
  padding 0 16px
  width 74%
  width 62%
  margin-bottom 0.5em

.msg
  margin-top -4%
  margin-bottom 5%
  text-align center
  margin -24px 0 4px 0
  margin -24px 0 4px 0
  img
    width 25%

