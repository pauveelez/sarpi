.btn-feed 
    -webkit-tap-highlight-color: transparent;
    background #b25244
    background linear-gradient(#57B6DB, #9FD3F0)
    border-radius 50%
    box-shadow inset 0 2px 3px rgba(celeste_A,0.13), 0 5px 8px rgba(0,0,0,0.3), 0 10px 10px 4px rgba(0,0,0,0.3)
    cursor pointer
    display block
    height 250px 
    margin 30px auto
    ourline 0
    position relative
    text-shadow 0 2px 1px rgba(0,0,0,0.25)
    transition all 0.3s ease-out
    user-select none
    width 250px



.btn-feed:active 
    box-shadow inset 0 2px 3px rgba(celeste_A,0.13),0 5px 8px rgba(0,0,0,0.35),0 3px 10px 4px rgba(0,0,0,0.2)
    color #9abb82
 

.btn-feed:after 
    content ""
    display block
    position absolute
    width 80%
    height 80%
    left 10%
    top 10%
    z-index 1
    border-radius 50%
    background linear-gradient(rgba(#1D75F9,.5) , #57B6DB)
    -webkit-filter blur(1px) 

.btn--feedText
    bottom 0
    font-size 40px
    left 0 
    position absolute
    right 0
    text-align center
    top 40%
    z-index 2
    color white
    font-weight bold

